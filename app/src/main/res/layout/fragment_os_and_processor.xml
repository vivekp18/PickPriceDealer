<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.efunhub.starkio.pickpricedealer.Fragment.OsAndProcessorFragment">

    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:drawablePadding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Os And Processor Features"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:drawableLeft="@drawable/ic_bullets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15.9 cm (6.26 inch) FHD+ Display"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:drawableLeft="@drawable/ic_bullets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12MP + 5MP|20MP + 2MP Dual Front Camera"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:drawableLeft="@drawable/ic_bullets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4000 Li-polymer Battery"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:drawableLeft="@drawable/ic_bullets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qualcomm Snapdragon 636 Processor"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
